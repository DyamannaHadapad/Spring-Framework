package com.xworkz.beans.configuration;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;

import com.xworkz.beans.bean.Court;
import com.xworkz.beans.bean.Judge;

@Configuration
@ComponentScan("com.xworkz")
public class SpringConfiguration {

	public SpringConfiguration() {
		System.out.println("SpringConfiguration defult constr");
	}

	@Bean
	public String name() {
		return "High Court";
	}

	public Court court() {
		Court court = new Court("Dharwad");
		court.setJudge(null);
		return court;
	}

	@Bean
	public Judge judge() {
		Judge judge = new Judge("Dyamanna H", 55);
		judge.setSalary(550000.00);
		return judge;
	}

}
